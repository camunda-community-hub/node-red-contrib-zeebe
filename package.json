{
    "name": "node-red-contrib-zeebe",
    "version": "0.6.3",
    "description": "Zeebe nodes for Node-RED ",
    "main": "index.js",
    "scripts": {
        "test": "jest --testPathIgnorePatterns integration --forceExit --detectOpenHandles",
        "test:integration": "jest --forceExit --detectOpenHandles"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/pedesen/node-red-contrib-zeebe.git"
    },
    "author": "pedesen",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/pedesen/node-red-contrib-zeebe/issues"
    },
    "homepage": "https://github.com/pedesen/node-red-contrib-zeebe#readme",
    "keywords": [
        "node-red",
        "zeebe",
        "camunda",
        "bpmn",
        "workflow",
        "microservice"
    ],
    "dependencies": {
        "uuid": "^8.1.0",
        "zeebe-node": "0.23.3"
    },
    "devDependencies": {
        "eslint": "^7.6.0",
        "husky": "^4.0.10",
        "jest": "^26.0.1",
        "lint-staged": "^10.2.11",
        "node-red": "^1.0.2",
        "node-red-node-test-helper": "^0.2.3"
    },
    "node-red": {
        "nodes": {
            "zeebe": "src/nodes/zeebe.js",
            "workflow-instance": "src/nodes/workflow-instance.js",
            "task-worker": "src/nodes/task-worker.js",
            "complete-task": "src/nodes/complete-task.js",
            "publish-message": "src/nodes/publish-message.js",
            "publish-start-message": "src/nodes/publish-start-message.js",
            "deploy": "src/nodes/deploy.js"
        }
    },
    "jest": {
        "testEnvironment": "node"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && npm test"
        }
    },
    "lint-staged": {
        "src/**/*.js": [
            "prettier --write",
            "git add"
        ]
    }
}
